[Unit]
Description=Gunicorn instance to serve app Flask app
After=network.target

[Service]
User=angsiserver
Group=www-data
WorkingDirectory=/home/angsiserver/project
Environment="PATH=/home/angsiserver/project/venv/bin"
ExecStart=/home/angsiserver/project/venv/bin/gunicorn --workers 3 --bind unix:peak.sock -m 007 wsgi:app

[Install]
WantedBy=multi-user.target
